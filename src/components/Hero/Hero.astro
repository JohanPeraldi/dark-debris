---
import Button from '../Button/Button.astro';
import Heading from '../Heading/Heading.astro';
---

<section
  class="relative flex h-screen min-h-dvh w-full flex-col flex-wrap-reverse items-center justify-center px-8 pt-24 md:px-9 md:pt-24"
>
  <div class="relative z-10 grid w-full max-w-7xl justify-center gap-32 md:grid-cols-[1fr_auto]">
    <div class="flex flex-col items-center justify-center gap-16 md:items-start">
      <div class="color__gradient">
        <Heading level={1} content="Hi, I'm Johan" />
        <p class="kodchasan-light-italic text-center text-3xl md:text-left md:text-4xl">
          I'm a web developer
        </p>
      </div>
      <Button href="#contact" text="Contact" />
    </div>

    <img
      class="h-auto w-full max-w-96 rounded-full md:max-w-xl"
      src="/img/avatar_in_front_of_computer_square.png"
      alt="Johan's avatar"
      width="360"
      height="360"
    />
  </div>
</section>
